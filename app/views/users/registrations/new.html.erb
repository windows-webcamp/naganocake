<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="row">
        <div class="col-xs-1"> </div>
        <div class="col-xs-10">
          <nav>
            <ul class="nav-list">
              <% if user_signed_in? %>
              <span class="margin-right"><%= link_to "マイページ", user_path(current_user) %></span>
              <span class="margin-right"><%= link_to "カート", carts_path(current_user) %></span>
              <span class="margin-right"><%= link_to "商品一覧", root_path %></span>
              <span class="margin-right"><%= link_to "注文履歴", orders_path(current_user) %></span>
              <% else %>
              <% end %>
            </ul>
          </nav>
        </div>
        <div class="col-xs-1"> </div>
      </div>
      <div class="row">
        <div class="col-xs-1"> </div>
        <div class="col-xs-6"> <span class="fontsize-cart">新規登録
</span> <br><br>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
              <div class="field">
                <%= f.label :氏名 %>
                  <%= f.text_field :last_name, autofocus: true, class:"form-control" ,placeholder: "姓", :style=> "width:30%;" %>
                    <%= f.text_field :first_name, autofocus: true, class:"form-control" ,placeholder: "名" ,:style=> "width:30%;" %>
              </div> <br>
              <div class="field">
                <%= f.label :フリガナ %>
                  <%= f.text_field :last_name_kana, autofocus: true, class:"form-control" ,placeholder: "フリガナ性", :style=> "width:30%;" %>
                    <%= f.text_field :first_name_kana, autofocus: true, class:"form-control" ,placeholder: "フリガナ名", :style=> "width:30%;" %>
              </div> <br>
              <div class="field">
                <%= f.label :郵便番号 %>
                  <%= f.text_field :postcode,autofocus: true, class:"form-control" ,placeholder: "郵便番号", :style=> "width:30%;" %>
              </div> <br>
              <div class="field">
                <%= f.label :住所 %>
                  <%= f.text_field :address,autofocus: true, class:"form-control" ,placeholder: "住所", :style=> "width:70%;" %>
              </div> <br>
              <div class="field">
                <%= f.label :電話番号 %>
                  <%= f.text_field :phone_number,autofocus: true, class:"form-control" ,placeholder: "ハイフンなし", :style=> "width:40%;" %>
              </div> <br>
              <div class="field">
                <%= f.label :メールアドレス %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" ,placeholder: "メールアドレス", :style=> "width:50%;" %>
              </div> <br>
              <div class="field">
                <%= f.label :password %>
                  <% if @minimum_password_length %> <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" ,placeholder: "6文字以上", :style=> "width:40%;" %>
              </div> <br>
              <div class="field">
                <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" ,placeholder: "6文字以上", :style=> "width:40%;" %>
              </div> <br>
              <div class="actions">
                <%= f.submit "Sign up", class: "btn btn-primary" %>
              </div>
              <% end %> <br>
                <%= render "users/shared/links" %>
        </div>
        <div class="col-xs-4"> </div>
      </div>
    </div>
  </div>
</div>