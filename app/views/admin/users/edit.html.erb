<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="row">
        <div class="col-xs-1"> </div>
        <div class="col-xs-10">
          <nav>
            <ul class="nav-list">
              <% if admin_signed_in? %>
              <span class="margin-right"><%= link_to "商品一覧", admin_products_path %></span>
              <span class="margin-right"><%= link_to "会員一覧", admin_users_path %></span>
              <span class="margin-right"><%= link_to "注文履歴一覧", admin_orders_path %></span>
              <span class="margin-right"><%= link_to "ジャンル管理", admin_genres_path %></span>
              <% else %>
              <% end %>
            </ul>
          </nav>
        </div>
        <div class="col-xs-1"> </div>
      </div>
      <div class="row">
        <div class="col-xs-1"> </div>
        <div class="col-xs-6"> <span class="fontsize-cart">会員編集
</span> <br><br>


<%= form_for(@user, {:url => admin_user_path}) do |g| %>
	<div class="field">
		<%= g.label :会員ID %>
		<%= @user.id %>
	</div>
	<div class="field">
		<%= g.label :氏名 %>
		<%= g.text_field :last_name, autofocus: true, class:"form-control", :style=> "width:30%;" %>
		<%= g.text_field :first_name, autofocus: true, class:"form-control", :style=> "width:30%;" %>
	</div>
	<br>
	<div class="field">
		<%= g.label :カナ %>
		<%= g.text_field :last_name_kana, autofocus: true, class:"form-control", :style=> "width:30%;"  %>
		<%= g.text_field :first_name_kana, autofocus: true, class:"form-control", :style=> "width:30%;"  %>
	</div>
	<br>
	<div class="field">
		<%= g.label :郵便番号 %>
		<%= g.text_field :postcode,autofocus: true, class:"form-control", :style=> "width:30%;" %>
	</div>
	<br>
	<div class="field">
		<%= g.label :住所 %>
		<%= g.text_field :address,autofocus: true, class:"form-control", :style=> "width:60%;" %>
	</div>
	<br>
	<div class="field">
		<%= g.label :電話番号 %>
		<%= g.text_field :phone_number,autofocus: true, class:"form-control", :style=> "width:40%;" %>
	</div>
	<br>
	<div class="field">
		<%= g.label :メールアドレス %>
		<%= g.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", :style=> "width:60%;" %>
	</div>
	<br>
<%= link_to "退会済にする", admin_user_path(@user), data: { confirm: "退会しますか？" }, method: :delete, class: "btn btn-danger"%>
<%= g.submit "変更を保存する", class: "btn btn-primary" %>
<% end %>
<br><br>

        </div>
        <div class="col-xs-4"> </div>
      </div>
    </div>
  </div>
</div>