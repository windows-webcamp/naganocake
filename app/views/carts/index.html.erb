ショッピングカート

<% @carts.each do |cart| %>

<%= attachment_image_tag cart.product, :product_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
<!-- 商品名 -->
<div><%= cart.product.product_name %></div>
<!-- 商品金額 -->
<div><%= cart.product.price %></div>
<!-- 商品数 -->

<%= form_for(cart) do |f| %>

<%= f.text_field :number, autofocus: true, id:"inputnumber" %>
<%= f.submit "合計金額再計算" %>
<% end %>
<!-- 小計 -->
<%= cart.product.price * cart.number %>
<%= link_to "削除", cart_path(cart), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
<% end %>
<!-- 合計金額 -->
<%= link_to "カート内削除", carts_delete_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>

<%= link_to "情報入力に進む", new_order_path %>

