<h2>送付先編集</h2>
<% form_for(@send) do |f| %>
<table>
	<tr>
		<th><%= f.label :郵便番号%></th>
		<th><%= f.text_field :postcode,autofocus: true %></th>
	</tr>
	<tr>
		<th><%= f.label :住所 %></th>
		<th><%= f.text_field :address,autofocus: true %></th>
	</tr>
	<tr>
		<th><%= f.label :宛名 %></th>
		<th><%= f.text_field :name, autofocus: true %></th>
	</tr>
</table>
<%= f.submit "編集する" %>
<% end %>