<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="row">
        <div class="col-xs-1"> </div>
        <div class="col-xs-10">
          <nav>
            <ul class="nav-list">
              <% if user_signed_in? %>
              <span class="margin-right"><%= link_to "マイページ", user_path(current_user) %></span>
              <span class="margin-right"><%= link_to "カート", carts_path(current_user) %></span>
              <span class="margin-right"><%= link_to "商品一覧", root_path %></span>
              <span class="margin-right"><%= link_to "注文履歴", orders_path(current_user) %></span>
              <% else %>
              <% end %>
            </ul>
          </nav>
        </div>
        <div class="col-xs-1"></div>
      </div>
      <div class="row">
        <div class="col-xs-1"> </div>
        <div class="col-xs-6"> <span class="fontsize-cart">配送先登録/一覧
</span> <br><br>


<%= form_for(@send) do |f| %>
<h4>郵便番号</h4>
<%= f.text_field :postcode, class:"form-control" %>
<br>
<h4>住所</h4>
<%= f.text_area :address, class:"form-control" %>
<br>
<h4>宛名</h4>
<%= f.text_field :name, class:"form-control" %>
<br>
<%= f.submit '登録する', class: "btn btn-primary" %>
<% end %>
<br>
<table class="table table-striped">
	<thead>
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @sends.each do |send| %>
		<tr>
			<td><%= send.postcode %></td>
			<td><%= send.address %></td>
			<td><%= send.name %></td>
			<td><%= link_to "編集する", edit_send_path(send.id) %></td>
		</tr>
		<% end %>
	</tbody>
</table>


</div>
        <div class="col-xs-4"> </div>
      </div>
    </div>
  </div>
</div>