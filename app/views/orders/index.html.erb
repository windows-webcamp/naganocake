<!-- 会員 -->
<h2>注文履歴一覧</h2>
<table class="table">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td>
        <%= order.created_at.strftime('%Y/%m/%d') %>
      </td>
      <!-- 配送先 -->
      <td>
        <%= order.postcode %>
        <br>
        <%= order.address %>
        <br>
        <%= order.name %>
      </td>
      <!-- 注文商品 -->
      <td>
        <% order.order_products.each do |order_product| %>
        <p>
          <%= order_product.product.product_name %>
        </p>
        <% end %>
      </td>
      <!-- 支払金額 -->
      <td>
        <%= order.total_price %>
      </td>
      <!-- 履歴詳細へのリンク -->
      <td>
        <%= link_to '表示する', order_path(order.id), class: 'btn-sm btn-success' %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>