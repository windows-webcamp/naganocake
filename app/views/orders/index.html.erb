<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="row">
        <div class="col-xs-1"> </div>
        <div class="col-xs-10">
          <nav>
            <ul class="nav-list">
              <% if user_signed_in? %>
              <span class="margin-right"><%= link_to "マイページ", user_path(current_user) %></span>
              <span class="margin-right"><%= link_to "カート", carts_path(current_user) %></span>
              <span class="margin-right"><%= link_to "商品一覧", root_path %></span>
              <span class="margin-right"><%= link_to "注文履歴", orders_path(current_user) %></span>
              <% else %>
              <% end %>
            </ul>
          </nav>
        </div>
        <div class="col-xs-1"> </div>
      </div>
      <div class="row">
        <div class="col-xs-1"> </div>
        <div class="col-xs-8"> <span class="fontsize-cart">注文履歴一覧
</span> <br><br>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td>
        <%= order.created_at.strftime('%Y/%m/%d') %>
      </td>
      <!-- 配送先 -->
      <td>
        <%= order.postcode %>
        <br>
        <%= order.address %>
        <br>
        <%= order.name %>
      </td>
      <!-- 注文商品 -->
      <td>
        <% order.order_products.each do |order_product| %>
        <p>
          <%= order_product.product.product_name %>
        </p>
        <% end %>
      </td>
      <!-- 支払金額 -->
      <td>
        <%= order.total_price %>円
      </td>
      <!-- 履歴詳細へのリンク -->
      <td>
        <%= link_to '表示する', order_path(order.id), class: 'btn-sm btn-success' %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>


</div>
        </div>
        <div class="col-xs-1"> </div>
      </div>
    </div>
  </div>
</div><br>