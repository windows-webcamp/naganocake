<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="row">
        <div class="col-xs-1"> </div>
        <div class="col-xs-10">
          <nav>
            <ul class="nav-list">
              <% if user_signed_in? %>
              <span class="margin-right"><%= link_to "マイページ", user_path(current_user) %></span>
              <span class="margin-right"><%= link_to "カート", carts_path(current_user) %></span>
              <span class="margin-right"><%= link_to "商品一覧", root_path %></span>
              <span class="margin-right"><%= link_to "注文履歴", orders_path(current_user) %></span>
              <% else %>
              <% end %>
            </ul>
          </nav>
        </div>
        <div class="col-xs-1"> </div>
      </div>
      <div class="row">
        <div class="col-xs-1"> </div>
        <div class="col-xs-8"> <span class="fontsize-cart">注文詳細画面
</span> <br><br>


<strong>注文情報</strong>
<table>
  <tr>
    <th>注文日</th>
    <td>
      <%= @order.created_at.strftime('%Y/%m/%d') %>
    </td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      <%= @order.postcode %>
      <%= @order.address %>
      <br>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td>
      <%= @order.payment_method %>
    </td>
  </tr>
  <tr>
    <th>ステータス　</th>
    <td>
      <%= @order.order_status %>
    </td>
  </tr>
</table>
<br><br>
<strong>請求情報</strong>
<table>
  <tr>
    <th>商品合計　</th>
    <td>
      <%= @order.total_price - @order.delivery_cost %>円
    </td>
  </tr>
  <tr>
    <th>配送料</th>
    <td>
      <%= @order.delivery_cost %>円
    </td>
  </tr>
  <tr>
    <th>ご請求額</th>
    <td>
      <%= @order.total_price %>円
    </td>
  </tr>
</table>
<br><br>

<strong>注文内容</strong><br><br>
<table class="table table-bordered" style = "width:50%!important" >
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>個数</th>
    <th>小計</th>
  </tr>
  <% @order_products.each do |order_product| %>
  <tr>
    <td class = "td">
      <%= order_product.product.product_name %>
    </td>
    <td>
      <%= (order_product.product.price*1.1).round %>
    </td>
    <td>
      <%= order_product.number %>
    </td>
    <td>
      <%= order_product.subtotal_price %>
    </td>
  </tr>
  <% end %>
</table>

</div>
        </div>
        <div class="col-xs-1"> </div>
      </div>
    </div>
  </div>
</div><br>